<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.settings.ChecklistsActivity">

<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_checklists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/save_btn"/>

    <Button
        android:id="@+id/save_btn"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:text="Save"/>
    <!-- android:background="@android:color/white" -->

    <Button
        android:id="@+id/add_btn"
        android:drawableStart="@android:drawable/ic_menu_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/save_btn"
        android:layout_marginEnd="8dp"
        android:textSize="20sp"
        android:text="Add"/>
    <!-- [TODO] android:background="@android:color/white" triggers Insufficient text color contrast ratio warning -->

</RelativeLayout>
